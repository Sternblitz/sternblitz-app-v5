# Core Supabase connection
NEXT_PUBLIC_SUPABASE_URL="https://your-project.supabase.co"          # Supabase project URL
NEXT_PUBLIC_SUPABASE_ANON_KEY="public-anon-key"                      # Supabase anon key for browser clients
SUPABASE_URL="https://your-project.supabase.co"                      # Same as above; used on the server
SUPABASE_SERVICE_ROLE_KEY="service-role-key"                         # Supabase service role key for server-side storage uploads

# Authentication + Google Maps
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY="maps-browser-key"                   # Browser key for Google Places autocomplete

# Orders & simulator upstream
REVIEW_API="https://custom-review-endpoint.example/api/reviews"      # Optional override for the reviews API (defaults to demo upstream)

# Emails (Resend)
RESEND_API_KEY="re_xxxxxxxxxxxxxxxxxxxxx"                            # Resend API key
RESEND_FROM="Sternblitz <info@example.com>"                          # Verified sender identity
RESEND_REPLY_TO="support@example.com"                                # Reply-to address (optional)
EMAIL_ATTACH_PDF="false"                                             # Set to "true" to attach the generated PDF to outgoing emails

# Misc
NODE_ENV="development"
